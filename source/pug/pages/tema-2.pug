                    .list__txt    
                        p.text-justify Empaque


                .list.mt-3
                    .list__item
                        .list__item__icon
                            img.img-a(src="assets/images/icons/icon-terminal.svg").img-fluid  
                    .list__txt    
                        p.text-justify Embalaje


                .list.mt-3
                    .list__item
